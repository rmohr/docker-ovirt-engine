{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "ovirt-engine",
    "labels": {
      "app": "ovirt-engine"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "ovirt-engine",
        "image": "rmohr/ovirt-engine:4.0",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 8080,
            "name": "engine"
          },
          {
            "containerPort": 8443,
            "name": "engine-tls"
          }
        ],
        "volumeMounts": [
          {
            "name": "certs",
            "mountPath": "/etc/pki/ovirt-engine"
          },
          {
            "name": "backups",
            "mountPath": "/var/lib/ovirt-engine/backups"
          },
          {
            "name": "plugins",
            "mountPath": "/usr/share/ovirt-engine/ui-plugins/"
          }
        ],
        "env": [
          {
            "name": "POSTGRES_USER",
            "value": "engine"
          },
          {
            "name": "POSTGRES_PASSWORD",
            "value": "@POSTGRES_PASSWORD@"
          },
          {
            "name": "POSTGRES_DB",
            "value": "engine"
          },
          {
            "name": "POSTGRES_HOST",
            "value": "localhost"
          },
          {
            "name": "POSTGRES_PORT",
            "value": "5432"
          },
          {
            "name": "OVIRT_FQDN",
            "value": "@ENGINE_FQDN@"
          },
          {
            "name": "OVIRT_PASSWORD",
            "value": "@ENGINE_PASSWORD@"
          },
          {
            "name": "OVIRT_PKI_ORGANIZATION",
            "value": "oVirt"
          },
          {
            "name": "SPICE_PROXY",
            "value": "http://@SPICE_PROXY_IP@:3128"
          }
        ]
      },
      {
        "name": "postgres",
        "image": "rmohr/ovirt-postgres:9.2.15",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 5432,
            "name": "ovirt-postgres"
          }
        ],
        "volumeMounts": [
          {
            "name": "pgdata",
            "mountPath": "/var/lib/postgresql/data"
          }
        ],
        "env": [
          {
            "name": "POSTGRES_USER",
            "value": "engine"
          },
          {
            "name": "POSTGRES_PASSWORD",
            "value": "@POSTGRES_PASSWORD@"
          },
          {
            "name": "POSTGRES_DB",
            "value": "engine"
          }
        ]
      },
      {
        "name": "spice-proxy",
        "image": "rmohr/spice-squid",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 3128,
            "name": "spice-proxy"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "certs",
        "nfs": {
          "server": "@NFS_SERVER_ADDRESS@",
          "path": "@NFS_BASE_PATH@/certs"
        }
      },
      {
        "name": "backups",
        "nfs": {
          "server": "@NFS_SERVER_ADDRESS@",
          "path": "@NFS_BASE_PATH@/backups"
        }
      },
      {
        "name": "pgdata",
        "nfs": {
          "server": "@NFS_SERVER_ADDRESS@",
          "path": "@NFS_BASE_PATH@/pgdata"
        }
      },
      {
        "name": "plugins",
        "nfs": {
          "server": "@NFS_SERVER_ADDRESS@",
          "path": "@NFS_BASE_PATH@/plugins"
        }
      }
    ],
    "nodeSelector": {
      "kubernetes.io/hostname": "@CLUSTER_NODE_NAME@"
    }
  }
}
